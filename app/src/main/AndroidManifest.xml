<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsnipp.claraerp.saibookhouse">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SaiBookHouse">
        <activity android:name=".Activity.BuyNow"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".Activity.CartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme"/>
        <activity
            android:name=".Activity.DropQuery"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.OrderDetailsPackageInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.OrderDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Forgot"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ManageAddress"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Activity.ChangePassword"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Activity.MyProfile"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Activity.MyOrder"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MainPageActivity"
            android:label="@string/title_activity_main_page"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.VerifyOTP"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Activity.RegistrationScreen"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Activity.LoginScreen"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Activity.PackageInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SchoolPackageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SearchSchoolActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>