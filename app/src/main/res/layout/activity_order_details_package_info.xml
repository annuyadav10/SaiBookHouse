<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OrderDetailsPackageInfo"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gradient_header"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/back"
            android:layout_weight=".5"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow"
            app:tint="@color/white"
            android:layout_gravity="center_vertical"
            android:padding="13dp"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Info"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_weight=".5"
            android:id="@+id/cart"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/addcart"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2.5"
        android:padding="10dp">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/packageimage"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/packagename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Name Name Name Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000.00/-"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbarSize="2dp"
        android:layout_marginHorizontal="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:stretchColumns="1,2,3,4,5,6,7,8">
            <TableRow
                android:padding="5dp"
                android:background="#e6ffff">
                <TextView
                    android:layout_width="150dp"
                    android:text="Item Name"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textSize="11dp" />
                <TextView
                    android:layout_width="80dp"
                    android:text="Unit Price"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:text="HSN Code"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:text="SGT(₹)"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:text="CSGT(₹)"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="150dp"
                    android:text="Amount After GST"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:text="Qty."
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:text="Total Price"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11dp"/>
            </TableRow>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/purchagePackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"/>
        </TableLayout>

    </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>