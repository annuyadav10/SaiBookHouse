<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="200dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="4dp"
        android:elevation="200dp"
        android:layout_marginTop="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="3dp">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/packageimage"
            android:scaleType="centerCrop"
            android:padding="5dp"/>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">
            <TextView
                android:id="@+id/orderstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Placed"
                android:textStyle="bold"
                android:textColor="@color/orderstatuscolor"
                android:textSize="16sp"
                android:textAlignment="viewStart"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:layout_marginTop="-5dp">
            <TextView
                android:layout_weight="1.5"
                android:id="@+id/placeddate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10-01-2021"
                android:textStyle="bold"
                android:textColor="@color/orderdatecolor"
                android:textSize="14dp"
                />
                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:src="@drawable/forwordarrow"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/packagename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="package name abcd"
                android:textStyle="bold"
                android:textColor="@color/orderpackagecolor"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-5dp"
                android:maxLines="2" />
            <TextView
                android:id="@+id/packageprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textStyle="bold"
                android:textColor="@color/textcolor3"
                android:textSize="14dp"
                android:textAlignment="viewStart"
                android:layout_marginTop="5dp"/>


        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>