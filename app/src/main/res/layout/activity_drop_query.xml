<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DropQuery">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gradient_header"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/back"
            android:layout_weight=".5"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow"
            app:tint="@color/white"
            android:layout_gravity="center_vertical"
            android:padding="13dp"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop A Query"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_weight=".5"
            android:id="@+id/cart"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/addcart"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:visibility="invisible"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    android:layout_marginTop="30dp">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/edittxt"
        android:layout_marginTop="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/textcolor3"
            android:textSize="15dp"
            android:editable="true"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/textcolor3"
            android:textSize="15dp"
            android:editable="true"
            android:maxLength="10"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email Id"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@color/textcolor3"
            android:textSize="15dp"
            android:editable="true"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:elevation="200dp"
        android:background="@drawable/backgrounddropquery">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Enter Query"
            android:padding="5dp"/>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/submitbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:padding="13dp"
        android:text="SUBMIT"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/alternumber"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:layout_marginTop="40dp"
        android:visibility="visible"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>