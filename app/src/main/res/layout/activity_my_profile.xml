<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MyProfile">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gradient_header"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/back"
            android:layout_weight=".5"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow"
            app:tint="@color/white"
            android:layout_gravity="center_vertical"
            android:padding="13dp"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_weight=".5"
            android:id="@+id/cart"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/addcart"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="14dp"
        android:textAlignment="textEnd"
        android:text="Edit Profile"
        android:textSize="16dp"
        android:textColor="@color/textcolor5"
        android:textStyle="bold"
        android:layout_marginRight="14dp"
        android:padding="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/edittxt"
        android:layout_marginTop="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/textcolor3"
            android:textSize="15dp"
            android:editable="true"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@color/textcolor3"
            android:textSize="15dp"
            android:editable="true"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/textcolor3"
            android:textSize="15dp"
            android:editable="true"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/alternumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginTop="5dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/alterphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alternate Mobile Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/textcolor3"
            android:textSize="15dp"
            android:editable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/submitbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:padding="13dp"
        android:text="UPDATE PROFILE"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/alternumber"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>